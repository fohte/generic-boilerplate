{%- set is_workspace = monorepo_node_workspace | default(false) -%}
{%- set node_pkgs = subpackages | default([]) | selectattr('type', 'equalto', 'node') | list -%}
{
  "name": "{{ project_name }}",
  "private": true,
{%- if is_workspace %}
  "workspaces": [
{%- for pkg in node_pkgs %}
    "{{ pkg.name }}"{{ "," if not loop.last else "" }}
{%- endfor %}
  ],
{%- endif %}
  "type": "module",
  "scripts": {
    "lint": "eslint .",
    "format:eslint": "eslint --fix .",
    "format:prettier": "prettier --write .",
    "format": "conc -m 1 {{ node_package_manager }}:format:eslint {{ node_package_manager }}:format:prettier",
{%- if is_workspace %}
    "test": "pnpm -r run test"
{%- else %}
    "test": "conc {{ node_package_manager }}:test:type {{ node_package_manager }}:test:unit",
    "test:type": "tsc --noEmit",
    "test:unit": "vitest run"
{%- endif %}
  },
  "devDependencies": {
    "@commitlint/cli": "20.4.1",
    "@fohte/eslint-config": "0.1.2",
{%- if node_package_manager == 'pnpm' %}
    "@tsconfig/node-lts": "24.0.0",
    "@tsconfig/strictest": "2.0.8",
    "@types/node": "24.10.12",
{%- else %}
    "@tsconfig/bun": "1.0.10",
    "@types/bun": "1.3.8",
{%- endif %}
    "concurrently": "9.2.1",
    "eslint": "9.39.2",
    "prettier": "3.8.1",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  }
}
