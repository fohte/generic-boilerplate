on:
  push:
    branches:
      - master
      - main
{%- if release_binary %}
  workflow_dispatch:
    inputs:
      tag_name:
        description: 'Tag name to upload assets to (e.g., v0.1.1)'
        required: true
        type: string
{%- endif %}

name: release-please

jobs:
  release-please:
{%- if release_binary %}
    if: github.event_name != 'workflow_dispatch'
{%- endif %}
    runs-on: ubuntu-latest
{%- if auto_merge_release_pr or release_binary %}
    outputs:
{%- if release_binary %}
      release_created: {% raw %}${{ steps.release.outputs.release_created }}{% endraw %}
      tag_name: {% raw %}${{ steps.release.outputs.tag_name }}{% endraw %}
{%- endif %}
{%- if auto_merge_release_pr %}
      prs_created: {% raw %}${{ steps.release.outputs.prs_created }}{% endraw %}
      pr: {% raw %}${{ steps.release.outputs.pr }}{% endraw %}
{%- endif %}
{%- endif %}
    steps:
      - uses: actions/create-github-app-token@v2
        id: app-token
        with:
          app-id: {% raw %}${{ secrets.APP_ID }}{% endraw %}
          private-key: {% raw %}${{ secrets.APP_PRIVATE_KEY }}{% endraw %}

      - uses: googleapis/release-please-action@v4
        id: release
        with:
          token: {% raw %}${{ steps.app-token.outputs.token }}{% endraw %}
          config-file: release-please-config.json
          manifest-file: .release-please-manifest.json
{%- if auto_merge_release_pr %}

      # Auto-merge release PR to enable automatic releases on every merge to master
      - name: Auto-merge release PR
        if: steps.release.outputs.prs_created == 'true'
        env:
          GH_TOKEN: {% raw %}${{ steps.app-token.outputs.token }}{% endraw %}
          PR_JSON: {% raw %}${{ steps.release.outputs.pr }}{% endraw %}
        run: |
          PR_NUMBER=$(echo "$PR_JSON" | jq -r '.number')
          # Try --auto first (enables auto-merge when CI is pending/required)
          # If PR is already in clean status, --auto fails with 'Pull request is in clean status'
          # In that case, fall back to direct merge
          if OUTPUT=$(gh pr merge "$PR_NUMBER" --squash --auto -R "{% raw %}${{ github.repository }}{% endraw %}" 2>&1); then
            echo "$OUTPUT"
            echo "Auto-merge enabled successfully"
          elif echo "$OUTPUT" | grep -q "clean status"; then
            echo "$OUTPUT"
            echo "PR is in clean status, merging directly"
            gh pr merge "$PR_NUMBER" --squash -R "{% raw %}${{ github.repository }}{% endraw %}"
          else
            echo "$OUTPUT"
            echo "Auto-merge failed with unexpected error"
            exit 1
          fi
{%- endif %}
{%- if release_binary %}

  build-release:
    needs: release-please
    # always() is required because release-please job is skipped on workflow_dispatch,
    # and dependent jobs skip without evaluating their if condition by default.
    if: always() && (needs.release-please.outputs.release_created == 'true' || github.event_name == 'workflow_dispatch')
    strategy:
      matrix:
        include:
          - target: aarch64-apple-darwin
            os: macos-latest
          - target: x86_64-unknown-linux-gnu
            os: ubuntu-latest
          - target: aarch64-unknown-linux-gnu
            os: ubuntu-24.04-arm
    runs-on: {% raw %}${{ matrix.os }}{% endraw %}
    permissions:
      contents: write
    env:
      SCCACHE_GHA_ENABLED: 'true'
      RUSTC_WRAPPER: 'sccache'
    steps:
      - uses: actions/checkout@v6

      - run: rustup show

      - run: rustup target add {% raw %}${{ matrix.target }}{% endraw %}

      - name: Run sccache-cache
        uses: mozilla-actions/sccache-action@v0.0.9

      - name: Build
        run: cargo build --release --target {% raw %}${{ matrix.target }}{% endraw %}

      - name: Package binary
        env:
          PROJECT_NAME: {{ project_name }}
          BINARY_NAME: {{ binary_name }}
        run: |
          cd target/{% raw %}${{ matrix.target }}{% endraw %}/release
          tar czf ../../../"$PROJECT_NAME"-{% raw %}${{ matrix.target }}{% endraw %}.tar.gz "$BINARY_NAME"

      - name: Upload to release
        env:
          GH_TOKEN: {% raw %}${{ github.token }}{% endraw %}
          TAG_NAME: {% raw %}${{ inputs.tag_name || needs.release-please.outputs.tag_name }}{% endraw %}
          PROJECT_NAME: {{ project_name }}
        run: |
          gh release upload "$TAG_NAME" \
            "$PROJECT_NAME"-{% raw %}${{ matrix.target }}{% endraw %}.tar.gz
{%- endif %}
