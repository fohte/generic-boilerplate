{
  "name": "monorepo-node-workspace-pnpm",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "type": "module",
  "scripts": {
    "lint": "eslint .",
    "format:eslint": "eslint --fix .",
    "format:prettier": "prettier --write .",
    "format": "conc -m 1 pnpm:format:eslint pnpm:format:prettier",
    "test": "pnpm -r run test"
  },
  "devDependencies": {
    "@commitlint/cli": "20.4.1",
    "@fohte/eslint-config": "0.1.2",
    "@tsconfig/node-lts": "22.0.1",
    "@tsconfig/strictest": "2.0.8",
    "@types/node": "24.10.12",
    "concurrently": "9.2.1",
    "eslint": "10.0.0",
    "prettier": "3.8.1",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  }
}
